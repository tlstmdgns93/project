<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

  <org.androidtown.sleepdrive_cognition.googleapi.Mypainter
      android:id="@+id/painter"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1">

  </org.androidtown.sleepdrive_cognition.googleapi.Mypainter>

  <org.androidtown.sleepdrive_cognition.googleapi.uicamera.CameraSourcePreview
      android:id="@+id/preview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentTop="true"></org.androidtown.sleepdrive_cognition.googleapi.uicamera.CameraSourcePreview>

  <ImageView
      android:id="@+id/imageview1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      android:src="@drawable/img"
      android:visibility="invisible" />

  <ImageView
      android:id="@+id/imageview2"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginLeft="120dp"
      android:layout_marginTop="50dp"
      android:src="@drawable/dan"
      android:visibility="invisible" />


</RelativeLayout>
